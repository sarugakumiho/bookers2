<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h2>User info</h2>
      <%= form_with model: @user, local: true do |f| %>
        
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control name" %>
        </div>
         
        <div class="form-group">
           <%= f.label :inputImage %><br />
           <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
      
        <div class="form-group">
          <%= f.label :Introduction %><br />
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class: "form-control introduction" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
　　  <% end %>
　　　
　  </div>
  </div>
</div>